<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- main activity theme. -->
    <style name="AppThemeGreen" parent="ActivityThemeGreen">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="colorControlNormal">@color/colorPrimaryGreen</item>
    </style>

    <!--other activity theme. -->
    <style name="ActivityThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
        <item name="actionMenuTextColor">@android:color/white</item>
        <item name="android:titleTextColor" tools:targetApi="m">@android:color/white</item>
        <item name="colorControlHighlight">@color/colorAccentGreen</item>
        <item name="colorControlNormal">@color/colorPrimaryGreen</item>
    </style>
    <!--*********************************************************************************-->


