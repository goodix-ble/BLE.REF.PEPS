<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sublayout_generic_selector"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">

    <TextView
        android:id="@+id/sublayout_caption_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption" />

    <TextView
        android:id="@+id/sublayout_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/libuihelper_na"
        android:textColor="#000000"
        android:textIsSelectable="true"
        tools:text="App key 0" />

    <TextView
        android:id="@+id/sublayout_value_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/libuihelper_na"
        android:textIsSelectable="true"
        android:textSize="12sp"
        tools:text="ABCDEF01234567890123456789ABCDEF" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/sublayout_select_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/button_ripple_bg"
            android:text="Select" />

        <Button
            android:id="@+id/sublayout_action_btn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:background="@drawable/button_ripple_bg"
            android:text="Add" />
    </LinearLayout>

</LinearLayout>