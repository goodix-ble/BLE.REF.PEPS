<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sublayout_value_editor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="6dp">


    <TextView
        android:id="@+id/sublayout_caption_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caption" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sublayout_hex_prefix_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0x"
            android:textSize="14sp"
            android:visibility="gone"
            tools:ignore="HardcodedText"
            tools:visibility="visible" />

        <EditText
            android:id="@+id/sublayout_value_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/libuihelper_na"
            android:inputType="text"
            android:textSize="14sp"
            tools:ignore="Autofill" />
    </LinearLayout>

    <Button
        android:id="@+id/sublayout_action_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/button_ripple_bg"
        android:text="Set" />
</LinearLayout>