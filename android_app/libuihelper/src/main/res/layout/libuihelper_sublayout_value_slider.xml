<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sublayout_value_slider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dp">


    <TextView
        android:id="@+id/sublayout_caption_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Status:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <SeekBar
            android:id="@+id/sublayout_value_slider_seekbar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:visibility="visible"
            tools:text="check to enable broadcasting" />

        <EditText
            android:id="@+id/sublayout_value_ed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/libuihelper_na"
            android:textSize="16sp"
            android:visibility="visible" />
    </LinearLayout>

    <Button
        android:id="@+id/sublayout_set_btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/button_ripple_bg"
        android:text="Set"
        android:visibility="visible" />
</LinearLayout>