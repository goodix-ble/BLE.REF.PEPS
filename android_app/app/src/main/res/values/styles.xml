<resources>

    <style name="ActivityThemeBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
        <item name="colorControlHighlight">@color/colorAccentBlue</item>
        <item name="colorControlNormal">@color/colorPrimaryBlue</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlowStyle</item>
    </style>

    <style name="OverFlowStyle">
        <item name="android:src">@mipmap/three_point</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="CardViewTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="contentPadding">8dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">1dp</item>
    </style>

</resources>
